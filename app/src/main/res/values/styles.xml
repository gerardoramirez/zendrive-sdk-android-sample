<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Material.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="AppTheme.Splash" parent="android:Theme.DeviceDefault.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>

    <style name="AppWidget.Collision.Button" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Collision" parent="AppTheme" >
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/red</item>
        <item name="android:buttonStyle">@style/AppWidget.Collision.Button</item>
    </style>
</resources>
